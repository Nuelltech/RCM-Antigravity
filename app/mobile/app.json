{
  "expo": {
    "name": "RCM",
    "slug": "mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/RCM_Short_logo_1000_Laranja-cutout_1x1.png",
    "scheme": "mobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Esta app precisa de acesso à câmera para tirar fotos de faturas.",
        "NSPhotoLibraryUsageDescription": "Esta app precisa de acesso à galeria para selecionar fotos de faturas."
      }
    },
    "android": {
      "package": "com.nuelltech.rcm",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "adaptiveIcon": {
        "backgroundColor": "#111827",
        "foregroundImage": "./assets/images/RCM_Short_logo_1000_Laranja-cutout_1x1.png",
        "monochromeImage": "./assets/images/RCM_Short_logo_1000_Laranja-cutout_1x1.png"
      }
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/RCM_Short_logo_1000_Laranja-cutout_1x1.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/RCM_Short_logo_1000_Laranja-cutout_1x1.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": false
    },
    "updates": {
      "enabled": false,
      "fallbackToCacheTimeout": 0
    },
    "extra": {
      "eas": {
        "projectId": "122eb13e-cf3d-429e-8f74-58ea47235a8b"
      }
    }
  }
}