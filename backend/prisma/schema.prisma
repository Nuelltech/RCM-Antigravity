  fornecedor_id       Int      // Multiple templates per supplier allowed
  uuid                String   @default(uuid())
  
  // Template Info
  template_name       String   // "Makro - Standard Invoice"
  template_version    Int      @default(1)
  template_format_id  String?  // Unique identifier for this format (e.g., "2025_lisboa", "2026_v2")
  
  // Template Structure (JSON)
  header_config       Json     // { "nif_pattern": "...", "date_pattern": "...", "total_pattern": "..." }
  table_config        Json     // { "columns": [...], "start_marker": "...", "end_marker": "...", "row_pattern": "..." }
  
  // Fingerprinting for quick matching
  fingerprint_config  Json?    // { "required_keywords": [...], "optional_keywords": [...], "structure_markers": {...}, "layout_hints": {...} }
  
  // Learning & Statistics (across ALL tenants using this supplier)
  is_active           Boolean  @default(true)
  confidence_score    Float    @default(0.0)  // 0-100 (based on success rate)
  times_used          Int      @default(0)    // How many times template was applied
  times_successful    Int      @default(0)    // How many times it worked correctly
  
  // AI Generation
  created_from_ai     Boolean  @default(false)
  ai_prompt_used      String?  @db.Text
  created_by_tenant   Int?     // Which tenant first created this template
  
  // Timestamps
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  // Relations
  fornecedor          Fornecedor @relation(fields: [fornecedor_id], references: [id], onDelete: Cascade)
  createdBy           Tenant?    @relation(fields: [created_by_tenant], references: [id], onDelete: SetNull)
  
  @@index([fornecedor_id])
  @@index([is_active])
  @@unique([fornecedor_id, template_format_id])  // Unique format per supplier
  @@map("invoice_templates")
}

// -----------------------------------------------------------------------------
// INVOICE PROCESSING METRICS (Audit & Performance)
// -----------------------------------------------------------------------------

model InvoiceProcessingMetrics {
  id                      Int       @id @default(autoincrement())
  tenant_id               Int
  invoice_id              Int
  upload_source           String    // 'web', 'api', 'email'
  user_id                 Int?
  
  // Parsing Method
  parsing_method          String    // 'template', 'gemini', 'vision', 'failed', 'legacy'
  template_id             Int?
  template_score          Float?
  
  // Duration Metrics (milliseconds)
  total_duration_ms       Int       // Worker processing time only
  end_to_end_duration_ms  Int?      // Upload → Reviewing/Error (TOTAL for UX/SLA)
  ocr_duration_ms         Int?
  parsing_duration_ms     Int?
  
  // Retry & Fallback
  gemini_attempts         Int       @default(0)
  gemini_model_used       String?   // 'gemini-2.5-flash', 'gemini-1.5-flash'
  gemini_fallback_to_vision Boolean @default(false)
  vision_used             Boolean   @default(false)
  vision_duration_ms      Int?
  
  // Results
  success                 Boolean
  line_items_extracted    Int       @default(0)
  confidence_score        Float?
  
  created_at              DateTime  @default(now())
  
  tenant                  Tenant              @relation(fields: [tenant_id], references: [id], onDelete: Cascade)
  invoice                 FaturaImportacao    @relation(fields: [invoice_id], references: [id], onDelete: Cascade)
  user                    User?               @relation(fields: [user_id], references: [id], onDelete: SetNull)
  
  @@index([tenant_id, created_at])
  @@index([invoice_id])
  @@index([parsing_method])
  @@map("invoice_processing_metrics")
}

// -----------------------------------------------------------------------------
// LEADS & DEMO REQUESTS (Pre-tenant, Global)
// -----------------------------------------------------------------------------

model Lead {
  id                  Int       @id @default(autoincrement())
  uuid                String    @unique @default(uuid())
  
  // Form data from lead capture modal
  name                String
  email               String
  business_type       String    // restaurante_independente, restaurante_fine_dining, hotel, grupo_cadeia
  
  // Source tracking
  source_page         String    @default("landing") // landing, demo
  source_cta          String?   // hero, final, middle
  utm_source          String?
  utm_medium          String?
  utm_campaign        String?
  ip_address          String?
  user_agent          String?
  
  // Funnel tracking
  video_watched       Boolean   @default(false)
  video_watched_at    DateTime?
  demo_requested      Boolean   @default(false)
  demo_requested_at   DateTime?
  self_serve          Boolean   @default(false)  // Went directly to create account
  self_serve_at       DateTime?
  
  // Lead status
  status              String    @default("new")  // new, contacted, qualified, demo_scheduled, converted, rejected
  
  // Conversion tracking
  converted_to_user_id Int?
  converted_at        DateTime?
  
  // Timestamps
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  
  // Relations
  convertedUser       User?     @relation(fields: [converted_to_user_id], references: [id])
  demoRequests        DemoRequest[]
  
  @@index([email])
  @@index([status, createdAt])
  @@index([business_type])
  @@map("leads")
}

model DemoRequest {
  id                  Int       @id @default(autoincrement())
  uuid                String    @unique @default(uuid())
  
  // Form data from demo request form
  name                String
  email               String
  restaurant          String
  locations           String    // "1", "2-5", "+5"
  challenge           String    // margens, compras, precos, falta_controlo
  
  // Optional links (if user already exists)
  user_id             Int?
  tenant_id           Int?
  lead_id             Int?      // Link back to original lead capture
  
  // Source tracking
  source              String    @default("demo_page")
  ip_address          String?
  user_agent          String?
  
  // Demo status
  status              String    @default("pending")  // pending, contacted, scheduled, completed, won, lost, cancelled
  scheduled_at        DateTime?
  completed_at        DateTime?
  outcome             String?   // won, lost, postponed
  notes               String?   @db.Text
  
  // Timestamps
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  
  // Relations
  user                User?     @relation(fields: [user_id], references: [id])
  tenant              Tenant?   @relation(fields: [tenant_id], references: [id])
  lead                Lead?     @relation(fields: [lead_id], references: [id])
  
  @@index([email])
  @@index([status, createdAt])
  @@index([challenge])
  @@index([lead_id])
  @@map("demo_requests")
}

// -----------------------------------------------------------------------------
// INTERNAL USERS - Team Members (Admin, Marketing, Sales, Support)
// -----------------------------------------------------------------------------

model InternalUser {
  id                  Int       @id @default(autoincrement())
  uuid                String    @unique @default(uuid())
  
  // Identity
  email               String    @unique
  password_hash       String
  name                String
  
  // Role & Permissions
  role                String    // Admin, Marketing, Sales, Support
  permissions         Json?     // Additional granular permissions if needed
  
  // Status
  active              Boolean   @default(true)
  email_verified      Boolean   @default(false)
  
  // Activity tracking
  last_login_at       DateTime?
  last_login_ip       String?
  
  // Timestamps
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  
  @@index([email])
  @@index([role, active])
  @@map("internal_users")
}

// -----------------------------------------------------------------------------
// SALES IMPORT (Similar to Invoice Import)
// -----------------------------------------------------------------------------

model VendaImportacao {
  id                Int      @id @default(autoincrement())
  tenant_id         Int
  
  // Report Info (extracted from PDF/Image)
  data_venda        DateTime? // Report date
  total_bruto       Decimal?  @db.Decimal(10, 2) // Gross sales
  total_liquido     Decimal?  @db.Decimal(10, 2) // Net sales
  
  // VAT Breakdown (optional)
  iva_6_base        Decimal?  @db.Decimal(10, 2)
  iva_6_valor       Decimal?  @db.Decimal(10, 2)
  iva_13_base       Decimal?  @db.Decimal(10, 2)
  iva_13_valor      Decimal?  @db.Decimal(10, 2)
  iva_23_base       Decimal?  @db.Decimal(10, 2)
  iva_23_valor      Decimal?  @db.Decimal(10, 2)
  
  // Payment Methods (optional)
  pagamento_dinheiro Decimal? @db.Decimal(10, 2)
  pagamento_cartao   Decimal? @db.Decimal(10, 2)
  pagamento_outros   Decimal? @db.Decimal(10, 2)
  
  // File & Processing
  ficheiro_nome     String
  ficheiro_url      String
  ficheiro_tipo     String    // pdf, jpg, png
  ocr_texto_bruto   String?   @db.Text
  
  // Status
  status            String    // pending, reviewing, approved, rejected, error
  erro_mensagem     String?   @db.Text
  
  // Timestamps
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  processado_em     DateTime?
  aprovado_em       DateTime?
  aprovado_por      Int?
  
  // Relations
  tenant            Tenant    @relation(fields: [tenant_id], references: [id])
  linhas            VendaLinhaImportacao[]
  vendas            Venda[]   // Created sales records after approval
  processingMetrics SalesProcessingMetrics[]
  
  @@index([tenant_id, status])
  @@index([tenant_id, data_venda])
  @@map("vendas_importacao")
}

model VendaLinhaImportacao {
  id                    Int      @id @default(autoincrement())
  venda_importacao_id   Int
  tenant_id             Int
  linha_numero          Int
  
  // Extracted Data from OCR/Gemini
  descricao_original    String
  descricao_limpa       String?
  quantidade            Decimal?  @db.Decimal(10, 3)
  preco_unitario        Decimal?  @db.Decimal(10, 2)
  preco_total           Decimal   @db.Decimal(10, 2)
  
  // MenuItem Matching (sales are linked to menu, not stock)
  menu_item_id          Int?
  confianca_match       Decimal?  @db.Decimal(5, 2)  // 0-100%
  status                String    // pending, matched, manual_review, approved
  
  // Metadata
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  
  // Relations
  vendaImportacao       VendaImportacao @relation(fields: [venda_importacao_id], references: [id], onDelete: Cascade)
  tenant                Tenant    @relation(fields: [tenant_id], references: [id])
  menuItem              MenuItem? @relation(fields: [menu_item_id], references: [id])
  
  @@index([venda_importacao_id])
  @@index([tenant_id, status])
  @@index([menu_item_id])
  @@map("vendas_linhas_importacao")
}

model SalesMatchingHistorico {
  id                    Int      @id @default(autoincrement())
  tenant_id             Int
  
  // Original sales description
  descricao_venda       String
  
  // Matched menu item
  menu_item_id          Int
  
  // Confidence & Confirmation
  confianca_inicial     Decimal?  @db.Decimal(5, 2)
  confirmado_por        Int       // user_id
  createdAt             DateTime  @default(now())
  
  // Relations
  tenant                Tenant    @relation(fields: [tenant_id], references: [id])
  menuItem              MenuItem  @relation(fields: [menu_item_id], references: [id])
  user                  User      @relation(fields: [confirmado_por], references: [id])
  
  @@index([tenant_id, descricao_venda])
  @@index([menu_item_id])
  @@map("sales_matching_historico")
}

model SalesProcessingMetrics {
  id                      Int       @id @default(autoincrement())
  tenant_id               Int
  sales_import_id         Int
  upload_source           String    // 'web', 'api'
  user_id                 Int?
  
  // Parsing Method
  parsing_method          String    // 'gemini-multimodal', 'failed'
  
  // Duration Metrics (milliseconds)
  total_duration_ms       Int
  ocr_duration_ms         Int?
  parsing_duration_ms     Int?
  
  // Results
  success                 Boolean
  line_items_extracted    Int       @default(0)
  confidence_score        Float?
  
  created_at              DateTime  @default(now())
  
  tenant                  Tenant              @relation(fields: [tenant_id], references: [id], onDelete: Cascade)
  salesImport             VendaImportacao     @relation(fields: [sales_import_id], references: [id], onDelete: Cascade)
  user                    User?               @relation(fields: [user_id], references: [id], onDelete: SetNull)
  
  @@index([tenant_id, created_at])
  @@index([sales_import_id])
  @@map("sales_processing_metrics")
}
