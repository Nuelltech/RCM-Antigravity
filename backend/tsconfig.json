{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react"
    },
    "include": [
        "src/core/**/*",
        "src/modules/**/*",
        "src/workers/**/*",
        "src/email-templates/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/scripts",
        "src/modules/leads"
    ]
}